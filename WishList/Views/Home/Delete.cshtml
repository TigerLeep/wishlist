@model WishList.ViewModels.Home.DeleteViewModel

<h2>Remove Item from @Model.User.Name's Wish List</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.User.Id, new { Name = "userId" })
        <div class="form-group">
            <div class="col-md-12">
                <h3>Are you sure you want to remove this item?</h3>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayFor(model => model.Item.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("back to list without saving", "List", new { id = @Model.User.Id })
</div>
